<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.avofinder">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"  />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/avologo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/avologo"
        android:hardwareAccelerated="true"
        android:supportsRtl="true"
        android:theme="@style/myTheme"
        android:requestLegacyExternalStorage="true"
        >
        <activity android:name="com.app.avofinder.MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.app.avofinder.aule"
            android:excludeFromRecents="true">

        </activity>

        <activity android:name="com.app.avofinder.Login" android:theme="@style/Theme.Registrazione1">

        </activity>

        <activity android:name="com.app.avofinder.Registrazione" android:theme="@style/Theme.Registrazione1">

        </activity>
        <activity android:name="com.app.avofinder.Conferma" android:theme="@style/Theme.Registrazione1">

        </activity>
        <activity android:name="com.app.avofinder.Orario" android:screenOrientation="landscape" android:theme="@style/Theme.Registrazione1">

        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>